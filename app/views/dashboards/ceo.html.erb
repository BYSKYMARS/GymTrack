<div class="container mt-5">
  <h1 class="mb-4 text-center">Panel del CEO</h1>

  <div class="row text-center mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Usuarios Registrados</h5>
          <p class="display-6"><%= @total_users %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Pagos Activos</h5>
          <p class="display-6"><%= @active_payments %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Ingresos Totales</h5>
          <p class="display-6">$<%= @total_income %></p>
        </div>
      </div>
    </div>
  </div>

  <h3 class="mt-5 mb-3">Usuarios más activos</h3>
  <ul class="list-group mb-4">
    <% @most_active_users.each do |u| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= u.name %>
        <span class="badge bg-primary rounded-pill"><%= u.user_activities.count %> actividades</span>
      </li>
    <% end %>
  </ul>

  <div class="mb-5">
    <%= link_to "Gestionar Actividades", activities_path, class: "btn btn-primary" %>
  </div>

  <h3 class="mb-3">Análisis en Metabase</h3>
  <div class="ratio ratio-16x9 mb-5">
    <iframe 
      src="http://localhost:3001/public/dashboard/e9a2cb84-9036-46b5-b03f-b50097ae58e7"
      frameborder="0"
      allowfullscreen>
    </iframe>
  </div>
</div>
