<% content_for :title, "Detalle de ciudad" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @city.name %></h5>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Editar ciudad", edit_city_path(@city), class: "btn btn-primary me-2" %>
    <%= link_to "Volver a ciudades", cities_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Eliminar ciudad", @city, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
  </div>
</div>
