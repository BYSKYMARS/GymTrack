<% content_for :title, "Ciudades" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <h1 class="mb-4">Ciudades</h1>

  <div class="list-group mb-4">
    <% @cities.each do |city| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <span><strong><%= city.name %></strong></span>
        <%= link_to "Ver ciudad", city, class: "btn btn-sm btn-outline-primary" %>
      </div>
    <% end %>
  </div>

  <%= link_to "Nueva ciudad", new_city_path, class: "btn btn-primary" %>
</div>
