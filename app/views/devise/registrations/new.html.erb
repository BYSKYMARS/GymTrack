<h2 class="mb-4">Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mb-3">
    <%= f.label :email, "Correo electrónico", class: "form-label" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :name, "Nombre completo", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :gym_location_id, "Sede", class: "form-label" %>
    <%= f.collection_select :gym_location_id, GymLocation.all, :id, :name, { prompt: "Selecciona tu sede" }, class: "form-select", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :plan_id, "Plan", class: "form-label" %>
    <%= f.collection_select :plan_id, Plan.all, :id, :name, { prompt: "Selecciona tu plan" }, class: "form-select", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Contraseña", class: "form-label" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
  </div>

  <div class="mb-4">
    <%= f.submit "Registrarse", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
