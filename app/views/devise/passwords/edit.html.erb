<h2 class="mb-4">Cambiar tu contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "Nueva contraseña", class: "form-label" %>
    <% if @minimum_password_length %>
      <div class="form-text">Mínimo <%= @minimum_password_length %> caracteres</div>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Cambiar contraseña", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<div class="mt-4">
  <%= render "devise/shared/links" %>
</div>
