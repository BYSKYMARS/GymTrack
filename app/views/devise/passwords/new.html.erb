<h2 class="mb-4">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, "Correo electrónico", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
  </div>

  <div>
    <%= f.submit "Enviar instrucciones para restablecer contraseña", class: "btn btn-primary w-100" %>
  </div>
<% end %>

<div class="mt-4">
  <%= render "devise/shared/links" %>
</div>
