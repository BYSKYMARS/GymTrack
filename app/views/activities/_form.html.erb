<%= form_with(model: activity, local: true) do |form| %>
  <% if activity.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(activity.errors.count, "error") %> prohibieron guardar esta actividad:</h4>
      <ul>
        <% activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div>
    <%= form.submit "Guardar actividad", class: "btn btn-primary" %>
  </div>
<% end %>

