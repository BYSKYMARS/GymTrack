<% content_for :title, @activity.name %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
      <h2><%= @activity.name %></h2>
    </div>
    <div class="card-body">
      <p><strong>Categoría:</strong> <%= @activity.category %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Editar", edit_activity_path(@activity), class: "btn btn-primary" %>
    <%= link_to "Volver a actividades", activities_path, class: "btn btn-secondary" %>
    <%= button_to "Eliminar", @activity, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
  </div>
</div>
