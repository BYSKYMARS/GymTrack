<% content_for :title, "Detalle de la sesión de clase" %>

<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
      Detalles de la sesión de clase
    </div>
    <div class="card-body">
      <%= render @class_session %>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Editar sesión", edit_class_session_path(@class_session), class: "btn btn-primary me-2" %>
    <%= link_to "Volver a sesiones", class_sessions_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Eliminar sesión", @class_session, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
  </div>
</div>
