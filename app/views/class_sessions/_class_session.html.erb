<div id="<%= dom_id class_session %>" class="card mb-3">
  <div class="card-header">
    Clase ID: <%= class_session.id %>
  </div>
  <div class="card-body">
    <p><strong>Horario de clase (ID):</strong> <%= class_session.class_schedule_id %></p>
    <p><strong>Actividad:</strong> <%= class_session.activity.name %></p>
    <p><strong>Sala:</strong> <%= class_session.room.name %></p>
    <p><strong>Entrenador:</strong> <%= class_session.trainer.name %></p>
    <p><strong>Inicio:</strong> <%= l(class_session.starts_at, format: :long) %></p>
    <p><strong>Fin:</strong> <%= l(class_session.ends_at, format: :long) %></p>
    <p><strong>Capacidad m√°xima:</strong> <%= class_session.max_participants %></p>
  </div>
</div>
