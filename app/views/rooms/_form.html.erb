<%= form_with(model: room, local: true, class: "needs-validation") do |form| %>
  <% if room.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(room.errors.count, "error") %> impidieron guardar esta sala:</h4>
      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nombre de la sala", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :capacity, "Capacidad", class: "form-label" %>
    <%= form.number_field :capacity, class: "form-control", required: true, min: 1 %>
  </div>

  <div class="mb-3">
    <%= form.label :gym_location_id, "Sede", class: "form-label" %>
    <%= form.collection_select :gym_location_id, @gym_locations, :id, :name, { prompt: "Selecciona una sede" }, { class: "form-select", required: true } %>
  </div>

  <div>
    <%= form.submit "Guardar Sala", class: "btn btn-success" %>
  </div>
<% end %>
