<% content_for :title, "Detalles de Sala" %>

<div class="container">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title mb-4"><%= @room.name %></h2>

      <p><strong>Capacidad:</strong> <%= @room.capacity %></p>
      <p><strong>Sede:</strong> <%= @room.gym_location.name %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Editar esta sala", edit_room_path(@room), class: "btn btn-primary" %>
    <%= link_to "Volver a la lista de salas", rooms_path, class: "btn btn-secondary" %>
    <%= button_to "Eliminar esta sala", @room, method: :delete, data: { confirm: "Â¿EstÃ¡s seguro?" }, class: "btn btn-danger" %>
  </div>
</div>
