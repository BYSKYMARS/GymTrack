<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<%= render @plan %>

<div class="mt-3">
  <%= link_to "Edit this plan", edit_plan_path(@plan), class: "btn btn-primary me-2" %>
  <%= link_to "Back to plans", plans_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this plan", @plan, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
