<% content_for :title, "Detalle del Plan" %>

<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
<% end %>

<div class="card">
  <div class="card-header">
    <h3><%= @plan.name %></h3>
  </div>
  <div class="card-body">
    <p><strong>Precio:</strong> $<%= @plan.price %></p>
    <p><strong>Duración:</strong> <%= @plan.duration %> mes<%= 'es' if @plan.duration != 1 %></p>
    <p><strong>Descripción:</strong> <%= @plan.description %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Editar este plan", edit_plan_path(@plan), class: "btn btn-warning me-2" %>
  <%= link_to "Volver a los planes", plans_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Eliminar este plan", @plan, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
</div>
