<div id="<%= dom_id plan %>" class="card mb-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title"><%= plan.name %></h5>
    <h6 class="card-subtitle mb-3 text-muted">
      <%= number_to_currency(plan.price, unit: "$", precision: 2) %> por <%= pluralize(plan.duration, 'mes') %>
    </h6>

    <p class="card-text">
      <strong>Descripción:</strong><br>
      <%= simple_format(plan.description.presence || "Sin descripción") %>
    </p>

    <div class="mt-3">
      <%= link_to "Editar", edit_plan_path(plan), class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Eliminar", plan_path(plan), method: :delete, data: { confirm: "¿Seguro que deseas eliminar este plan?" }, class: "btn btn-sm btn-outline-danger" %>
      <%= link_to "Volver a la lista", plans_path, class: "btn btn-sm btn-secondary" %>
    </div>
  </div>
</div>
