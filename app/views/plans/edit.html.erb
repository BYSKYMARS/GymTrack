<% content_for :title, "Editar Plan" %>

<div class="container mt-4">
  <h1 class="mb-4">Editar Plan</h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= render "form", plan: @plan %>
    </div>
  </div>

  <div class="mt-4 d-flex gap-2">
    <%= link_to "Ver este plan", @plan, class: "btn btn-outline-primary" %>
    <%= link_to "Volver a la lista de planes", plans_path, class: "btn btn-secondary" %>
  </div>
</div>
