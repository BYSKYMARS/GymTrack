<% content_for :title, "Sedes del Gimnasio" %>

<div class="container">
  <h1 class="mb-4">Sedes del Gimnasio</h1>

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
  <% end %>

  <div class="row">
    <% @gym_locations.each do |gym_location| %>
      <div class="col-md-6 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= gym_location.name %></h5>
            <p class="card-text"><strong>Direcci√≥n:</strong> <%= gym_location.address %></p>
            <p class="card-text"><strong>Ciudad:</strong> <%= gym_location.city.name if gym_location.city %></p>
            <%= link_to "Ver esta sede", gym_location, class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if current_user.ceo? %>
    <div class="mt-3">
      <%= link_to "Nueva sede", new_gym_location_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
