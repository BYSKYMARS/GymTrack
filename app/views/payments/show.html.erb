<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<%= render @payment %>

<div class="mt-3">
  <%= link_to "Edit this payment", edit_payment_path(@payment), class: "btn btn-primary me-2" %>
  <%= link_to "Back to payments", payments_path, class: "btn btn-secondary me-2" %>

  <%= button_to "Destroy this payment", @payment, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
