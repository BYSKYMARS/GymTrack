<div id="<%= dom_id payment %>">
  <p>
    <strong>Usuario:</strong>
    <%= payment.user.name %> (<%= payment.user.email %>)
  </p>

  <p>
    <strong>Plan:</strong>
    <%= payment.plan.name %>
  </p>

  <p>
    <strong>Monto pagado:</strong>
    $<%= number_with_precision(payment.amount_paid, precision: 2) %>
  </p>

  <p>
    <strong>Fecha de pago:</strong>
    <%= l(payment.paid_on, format: :long) %>
  </p>

  <p>
    <strong>Vence el:</strong>
    <%= l(payment.expires_on, format: :long) %>
  </p>

  <p>
    <strong>Estado:</strong>
    <%= payment.status == "active" ? "Activo" : "Inactivo" %>
  </p>
</div>
