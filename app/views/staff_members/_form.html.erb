<%= form_with(model: staff_member, local: true, class: "needs-validation") do |form| %>
  <% if staff_member.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(staff_member.errors.count, "error") %> impidieron guardar este miembro del staff:</h4>
      <ul>
        <% staff_member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nombre completo", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :role, "Rol (ej. entrenador, recepcionista)", class: "form-label" %>
    <%= form.text_field :role, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :gym_location_id, "Sede", class: "form-label" %>
    <%= form.collection_select :gym_location_id, @gym_locations, :id, :name, { prompt: "Selecciona una sede" }, { class: "form-select", required: true } %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
