<% content_for :title, "Miembros del Staff" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
  <% end %>

  <h1 class="mb-4">Miembros del Staff</h1>

  <div class="mb-3">
    <%= link_to "Nuevo miembro del staff", new_staff_member_path, class: "btn btn-primary" %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @staff_members.each do |staff_member| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= staff_member.name %></h5>
            <p class="card-text">
              <strong>Email:</strong> <%= staff_member.email %><br>
              <strong>Rol:</strong> <%= staff_member.role %><br>
              <strong>Sede:</strong> <%= staff_member.gym_location.name if staff_member.gym_location %>
            </p>
            <%= link_to "Ver detalle", staff_member, class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
