<% content_for :title, "Reservas" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
  <% end %>

  <h1 class="mb-4">Reservas</h1>

  <div class="mb-3">
    <%= link_to "Nueva Reserva", new_reservation_path, class: "btn btn-primary" %>
  </div>

  <% if @reservations.any? %>
    <div class="list-group">
      <% @reservations.each do |reservation| %>
        <div class="list-group-item mb-2">
          <%= render reservation %>
          <div class="mt-2">
            <%= link_to "Ver", reservation, class: "btn btn-outline-info btn-sm me-2" %>
            <%= link_to "Editar", edit_reservation_path(reservation), class: "btn btn-outline-secondary btn-sm me-2" %>
            <%= button_to "Eliminar", reservation_path(reservation), method: :delete, data: { confirm: "Â¿EstÃ¡s seguro?" }, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No hay reservas registradas.</p>
  <% end %>
</div>
