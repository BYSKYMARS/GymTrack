<% content_for :title, "Detalle de Reserva" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <div class="card-header">
      <h2>Detalle de Reserva</h2>
    </div>
    <div class="card-body">
      <p><strong>Usuario:</strong> <%= @reservation.user.name %></p>
      <p><strong>Clase:</strong> <%= @reservation.class_session.activity.name %> - <%= l(@reservation.class_session.starts_at, format: :long) %></p>
      <p><strong>Estado:</strong> <%= @reservation.status %></p>
      <p><strong>Reservado el:</strong> <%= l(@reservation.booked_at, format: :long) %></p>
    </div>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Editar Reserva", edit_reservation_path(@reservation), class: "btn btn-primary" %>
    <%= link_to "Volver a Reservas", reservations_path, class: "btn btn-secondary" %>
    <%= button_to "Eliminar Reserva", reservation_path(@reservation), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
  </div>
</div>
