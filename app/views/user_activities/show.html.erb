<% content_for :title, "Detalle de actividad del usuario" %>

<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="card mb-4">
  <div class="card-header">
    <h2 class="mb-0">Detalle de actividad</h2>
  </div>
  <div class="card-body">
    <p><strong>Usuario:</strong> <%= @user_activity.user.name %> (ID: <%= @user_activity.user_id %>)</p>
    <p><strong>Actividad:</strong> <%= @user_activity.activity.name %> (ID: <%= @user_activity.activity_id %>)</p>
    <p><strong>Duración:</strong> <%= @user_activity.duration %> minutos</p>
    <p><strong>Fecha:</strong> <%= l(@user_activity.date, format: :long) %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Editar actividad", edit_user_activity_path(@user_activity), class: "btn btn-primary" %>
  <%= link_to "Volver a actividades", user_activities_path, class: "btn btn-secondary" %>
  <%= button_to "Eliminar", @user_activity, method: :delete, data: { confirm: "¿Estás seguro de eliminar esta actividad?" }, class: "btn btn-danger" %>
</div>
