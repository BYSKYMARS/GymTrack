<p class="text-success"><%= notice %></p>

<% content_for :title, "Actividades de usuarios" %>

<h1 class="mb-4">Actividades de usuarios</h1>

<div class="mb-3">
  <%= link_to "Registrar nueva actividad", new_user_activity_path, class: "btn btn-primary" %>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4" id="user_activities">
  <% @user_activities.each do |user_activity| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title">Usuario ID: <%= user_activity.user_id %></h5>
          <p class="card-text">
            <strong>Actividad ID:</strong> <%= user_activity.activity_id %><br>
            <strong>Duraci√≥n:</strong> <%= user_activity.duration %> minutos<br>
            <strong>Fecha:</strong> <%= user_activity.date.strftime('%d/%m/%Y') %>
          </p>
          <%= link_to "Ver detalle", user_activity, class: "btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
