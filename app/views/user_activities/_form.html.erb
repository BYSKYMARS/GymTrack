      <h4><%= pluralize(user_activity.errors.count, "error") %> impidieron guardar el registro:</h4>
      <ul>
        <% user_activity.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :user_id, "Usuario", class: "form-label" %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :activity_id, "Actividad", class: "form-label" %>
    <%= form.number_field :activity_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :duration, "DuraciÃ³n (minutos)", class: "form-label" %>
