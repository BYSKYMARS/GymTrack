<% content_for :title, "Detalle del horario de clase" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <div class="card-header">
      Detalle del Horario de Clase
    </div>
    <div class="card-body">
      <p><strong>Actividad:</strong> <%= @class_schedule.activity.name %></p>
      <p><strong>Sala:</strong> <%= @class_schedule.room.name %></p>
      <p><strong>Entrenador:</strong> <%= @class_schedule.trainer.name %></p>
      <p><strong>Día:</strong> <%= Date::DAYNAMES[@class_schedule.weekday % 7] %></p>
      <p><strong>Hora de inicio:</strong> <%= @class_schedule.start_time.strftime("%H:%M") %></p>
      <p><strong>Hora de fin:</strong> <%= @class_schedule.end_time.strftime("%H:%M") %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Editar", edit_class_schedule_path(@class_schedule), class: "btn btn-primary me-2" %>
    <%= link_to "Volver a horarios", class_schedules_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Eliminar", @class_schedule, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
  </div>
</div>
